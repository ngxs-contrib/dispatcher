  },
  "license": "MIT",
  "homepage": "https://github.com/ngxs-labs/emitter#readme",
  "bugs": {
    "url": "https://github.com/ngxs-labs/emitter/issues"
  },
  "keywords": [
    "ngxs",
    "redux",
    "store"
  ],
  "contributors": [
    {
      "name": "Artur Androsovych",
      "email": "arthurandrosovich@gmail.com"
    },
    {
      "name": "Maxim Ivanov",
      "email": "splincodewd@yandex.ru"
    }
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "e2e": "ng e2e",
    "// - UTILS": "Utility scripts",
    "emitter:clean": "rm -rf dist",
    "emitter:lint": "ng lint emitter",
    "emitter:test": "ng test --runInBand --silent",
    "emitter:build": "ts-node ./tools/build && ts-node ./tools/copy-readme",
    "emitter:rollup": "rollup -c rollup.config.js",
    "format": "prettier --write \"emitter/**/*.ts\"",
    "// - CI": "CI pipelines",
    "ci:pipelines": "npm-run-all emitter:*",
    "// - npm": "npm scripts",
    "bump": "ts-node ./tools/bump"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@ngxs/store": "^3.6.0",
    "rxjs": "^6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "^0.10.2"
  },
  "devDependencies": {
    "@angular-builders/jest": "^8.3.2",
    "@angular-devkit/build-angular": "^0.803.23",
    "@angular-devkit/build-ng-packagr": "^0.803.23",
    "@angular/cli": "^8.3.23",
    "@angular/compiler-cli": "^8.2.14",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-angular": "^8.3.4",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.7.2",
    "@types/semver": "^6.2.0",
    "@types/yargs": "^13.0.4",
    "codelyzer": "^5.2.1",
    "colors": "^1.4.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "ng-packagr": "^5.7.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.29.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "semver": "^6.3.0",
    "ts-node": "^8.6.2",
    "tsickle": "^0.37.1",
    "tslint": "^5.20.1",
    "tslint-sonarts": "^1.9.0",
    "typescript": "3.5.3",
    "yargs": "^14.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "tabWidth": 2,
    "printWidth": 100,
    "trailingComma": "none",
    "bracketSpacing": true,
    "singleQuote": true
  }
}
